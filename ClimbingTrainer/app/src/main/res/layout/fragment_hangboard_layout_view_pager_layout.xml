<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="250dp"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/view"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/hang_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="Hang hangTime:"/>
            <TextView
                android:id="@+id/hang_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                android:layout_toRightOf="@id/hang_time"/>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/rest_time"
                android:layout_below="@id/hang_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest hangTime"/>

            <TextView
                android:id="@+id/rest_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                android:layout_toRightOf="@id/rest_time"
                android:layout_below="@id/hang_time"/>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/reps"
                android:layout_below="@id/rest_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reps"/>


            <TextView
                android:id="@+id/reps_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                android:layout_toRightOf="@id/reps"
                android:layout_below="@id/rest_time"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>